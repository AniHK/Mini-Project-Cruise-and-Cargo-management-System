<body>
    <form class="cust" action="/lucifer" method="post">
  <div class="mytabs">
    

  
    <input type="radio" id="tabsi" name="mytabs" checked="checked">
    <label for="tabsi">Order Cargo</label>
    <div class="tab">
      <h2 style="font-size:4vh ;">Order Cargo</h2>
      <b>Name:</b>
       <input type="text" name="Nam" id="name2"><br>
       
