        <option value="6">Mangaluru</option>
        <option value="7">Mumbai</option>
        <option value="8">Port Blair</option>
        <option value="9">Tuticorin</option>
        <option value="10">Vishakapatnam</option>       
       </select><input name="to_amt" id="tot_amt" type="text" readonly><br>
        <b> No. of Containers:</b>
       <input type="text" name="No_of_containe" id="contains"></br>
       <b> Quantity:</b>
       <input type="text" name="Quantit" id="qtny"><br>
       
       
      <br><br><br><input type="submit" value="Order" style="font-size:3vh ; color: black; font-family:'Patua One', cursive;"><br><br><br>
