        <fieldset>
            <legend>Your Bill</legend>
            <h3>Name:<span id="name1"></span></h3>                      
            <h3>No_of_containers: <span id="con"></span></h3>
            <h3>Quantity: <span id="qty"></span></h3>
            
           
            <table border="1" >
               
              <!-- <tbody id="bill">
                    <!-- <tr><td>Smosa</td><td>Rs. 10</td><td>1</td><td>10x1 = 10</td></tr> -->
              <!--  </tbody> -->

                

            </table>
            </fieldset>
            <h1>Total Amount: Rs. <span id="amount">0</span></h1>
             </div>     
      <input type="submit" value="Print" onclick="printContent('div1')" style="font-size:3vh ; color: black; font-family:'Patua One', cursive; margin-left: 200px;">
    </div>

    <input type="radio" id="tabsilver" name="mytabs">
    <label for="tabsilver">Track Cargo</label>
    <div class="tab">
      <h2 style="font-size:4vh ;">Track  Cargo</h2><br>
     <section class="nu">
     <button class="btn btn-secondary"><a href="https://craftsman-hundred-sister-hyk5.herokuapp.com/"> Track Cargo</a></button><br>
