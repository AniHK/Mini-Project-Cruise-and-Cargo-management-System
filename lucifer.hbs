    <label for="tabdi"><a href="/login">Logout</a></label>
    


    
  </div>
</form>

<script>

var Quantit = 10,Contain=10;
var qty=0,con=0;
var total_amount=0;

document.getElementById("name2").addEventListener("keyup",function(){
    // name = document.getElementById("name").value;
    
    document.getElementById("name1").innerHTML=this.value;
});   

document.getElementById("ctype").addEventListener("keyup",function(){
    // name = document.getElementById("name").value;
    
    document.getElementById("na").innerHTML=this.value;
});

 document.getElementById("dim").addEventListener("keyup",function(){
    // name = document.getElementById("name").value;
    
    document.getElementById("n").innerHTML=this.value;
});

document.getElementById("contains").addEventListener("keyup",function(){
    // name = document.getElementById("name").value;
    
    document.getElementById("con").innerHTML=this.value;
});

document.getElementById("qtny").addEventListener("keyup",function(){
    // name = document.getElementById("name").value;
    
    document.getElementById("qty").innerHTML=this.value;
});

document.getElementById("wp").addEventListener("keyup",function(){
    // name = document.getElementById("name").value;
    
    document.getElementById("me").innerHTML=this.value;
}); 

document.getElementById("contains").addEventListener("keyup",function(){
if(this.value==""||this.value==0){
    
    con=0;
    showBill();
}else{
    con=this.value;
    
    showBill();

}
});

document.getElementById("qtny").addEventListener("keyup",function(){
if(this.value==""||this.value==0){
    
    qty=0;
    showBill();
}else{
    qty=this.value;
    
    showBill();

}
});

function showBill(val){
   var fnum=document.getElementById("tot_amt").value;
   var snum=document.getElementById("to_amt").value;
   var dnum=document.getElementById("too_amt").value;
   var tot=parseInt(fnum) + parseInt(snum) + parseInt(dnum);
    document.getElementById("amount").innerHTML = Contain*con+Quantit*qty+tot; 
    //document.getElementById("book").innerHTML = tot+Quantit*qty; // total amount
}
function calculateAmt(val){
     var price=val*100;
    var divobj=document.getElementById('tot_amt');
    divobj.value=price;
}
function calAmt(val){
     var pric=val*100;
    var divob=document.getElementById('to_amt');
    divob.value=pric;
}
function caAmt(val){
     var pri=val*100;
    var divo=document.getElementById('too_amt');
    divo.value=pri;
}

function printContent(el){
    var restorepage =document.body.innerHTML;
    var printcontent = document.getElementById(el).innerHTML;
    document.body.innerHTML =printcontent;
    window.print();
    document.body.innerHTML =restorepage;
    window.close();
} 
</script>
</body>
